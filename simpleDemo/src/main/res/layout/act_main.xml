<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:fitsSystemWindows="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <Button
                    android:id="@+id/gosliding"
                    style="@style/main_btn"
                    android:text="DrawLayout - 侧滑"
                    />
                <Button
                    android:id="@+id/goSlidingMenuAct"
                    android:text="DrawLayout -侧滑2"
                    style="@style/main_btn"
                    />
                <Button
                    android:id="@+id/goButtomNavigate"
                    android:text="Buttom Naviagte- 底部导航"
                    style="@style/main_btn"
                    />

                <Button
                    android:id="@+id/goObserver"
                    style="@style/main_btn"
                    android:text="@string/rxjava"
                    />

            <Button
                android:id="@+id/goRecyclerView"
                style="@style/main_btn"
                android:text="RecyclerView"
                android:typeface="monospace"
                android:textAllCaps="false"
                android:layoutAnimation="@anim/fragmentlayoutanim" />
            <Button
                android:id="@+id/goHttpRequest"
                style="@style/main_btn"
                android:text="TBRequest"
                android:typeface="monospace"
                android:textAllCaps="false"
                android:layoutAnimation="@anim/fragmentlayoutanim" />
            <Button
                android:id="@+id/act_mainCustomView"
                android:text="自定View学习"
                style="@style/main_btn"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
