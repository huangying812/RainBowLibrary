<resources>
    <!-- Base application theme. -->
    <style name="DemoAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    android:textColor="@android:color/white"
    android:layout_marginRight="15dip"
    android:layout_marginLeft="15dip"
    android:layout_marginTop="10dip"
    <!-- main btn style -->
    <style name="main_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_ripple</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">serif</item>
    </style>
</resources>
