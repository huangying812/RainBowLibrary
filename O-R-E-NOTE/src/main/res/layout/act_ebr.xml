<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/aebr_btn"
        android:layout_width="match_parent"
        android:text="跳转"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/aebr_showMsg1"
        android:hint="原线程接收:"
        android:textSize="18sp"
        android:minHeight="45dip"
        android:minLines="4"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/aebr_showMsg2"
        android:hint="UI线程："
        android:textSize="18sp"
        android:textColor="#000000"
        android:minHeight="45dip"
        android:minLines="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/aebr_showMsg3"
        android:hint="子线程1："
        android:textSize="18sp"
        android:textColor="#000000"
        android:minHeight="45dip"
        android:minLines="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/aebr_showMsg4"
        android:hint="子线程2："
        android:minHeight="45dip"
        android:minLines="4"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>